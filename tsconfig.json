{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "rootDirs": [ "./src", "./test" ],
    "outDir": "dist",
    "sourceMap": true,
    "strictNullChecks": true,
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "lib": [ "es6" ],
    "allowJs": true,
    "noEmit": true,
    "checkJs": true,
    "noImplicitAny": true,
    "alwaysStrict": true,
    "declaration": true,
    "noImplicitThis": true
  },
  "include": [
    "src/**/*",
    "src/**/*.ts",
    "src/**/*.d.ts",
    "test/**/*",
    "test/**/*.ts",
    "test/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*-spec.ts"
  ]
}
