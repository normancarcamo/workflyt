{
  "presets": [
    "@babel/preset-env"
  ],
  "plugins": [
    [
      "module-resolver", {
        "cwd": "babelrc",
        "extensions": [ ".js", ".jsx", ".json" ],
        "root": [
          "./",
          "./src",
          "./src/db",
          "./src/services",
          "./src/utils",
          "./src/validations",
          "./test"
        ]
      }
    ],
    "@babel/plugin-proposal-object-rest-spread"
  ],
  "env": {
    "development": {
      "plugins": [
        ["inline-dotenv", {
          "path": ".env.dev"
        }],
        "@babel/plugin-transform-runtime"
      ]
    },
    "test": {
      "plugins": [
        ["inline-dotenv", {
          "path": ".env.test"
        }],
        "@babel/plugin-transform-runtime"
      ]
    }
  }
}
