{
  "name": "workflyt",
  "version": "1.0.0",
  "main": "src/server.js",
  "description": "App to handle workflows",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git@virtual.services:/srv/git/workflyt.git"
  },
  "scripts": {
    "dev": "nodemon",
    "stage": "pm2 deploy ecosystem.config.js staging update",
    "prod": "pm2 deploy ecosystem.config.js production update",
    "stage:setup": "pm2 deploy ecosystem.config.js staging setup",
    "prod:setup": "pm2 deploy ecosystem.config.js production setup",
    "create": "mkdir -p logs; mkdir -p logs/all logs/err logs/out",
    "remove": "rm -rf node_modules dist logs test/reports package-lock.json yarn.lock",
    "build": "babel src --out-dir dist -D",
    "test": "npm run test:unit && npm run test:integration:both",
    "test:unit": "jest --config test/config/jest.config.unit.js --detectOpenHandles",
    "test:integration": "MOCK=false jest --config test/config/jest.config.integration.js --runInBand --detectOpenHandles",
    "test:integration:mock": "MOCK=true jest --config test/config/jest.config.integration.js --runInBand --detectOpenHandles",
    "test:integration:both": "npm run test:integration:mock -- --coverage; npm run db:migration:test; npm run test:integration -- --coverage;",
    "test:report": "open test/reports/index.html",
    "test:report:coverage": "open test/reports/coverage/lcov-report/index.html",
    "db:migration:test": "sh src/db/scripts/shell/migrate_test.sh",
    "db:migration:dev": "sh src/db/scripts/shell/migrate_dev.sh"
  },
  "dependencies": {
    "@babel/preset-env": "^7.1.5",
    "@babel/runtime": "^7.1.5",
    "@ncardez/joi-xss": "^1.0.1",
    "@playscode/fns": "github:normancarcamo/fns",
    "axios": "^0.18.0",
    "babel-plugin-inline-dotenv": "^1.2.0",
    "babel-plugin-module-resolver": "^3.1.1",
    "body-parser": "^1.18.3",
    "compression": "^1.7.3",
    "cookie-parser": "^1.4.3",
    "cors": "^2.8.4",
    "dotenv": "^6.2.0",
    "dotenv-parse-variables": "^0.2.0",
    "express": "^4.16.3",
    "express-pino-logger": "^4.0.0",
    "jest-chain": "^1.0.5",
    "jest-extended": "^0.11.0",
    "jest-html-reporter": "^2.4.2",
    "joi": "^14.3.0",
    "nock": "^10.0.6",
    "pg": "^7.6.0",
    "pg-hstore": "^2.3.2",
    "pino-pretty": "^2.5.0",
    "sequelize": "^4.42.0",
    "sequelize-cli": "^5.4.0",
    "uuid": "^3.3.2",
    "xss": "^1.0.3"
  },
  "devDependencies": {
    "@babel/cli": "^7.1.5",
    "@babel/core": "^7.2.0",
    "@babel/node": "^7.0.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0",
    "@babel/plugin-transform-runtime": "^7.1.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^8.2.6",
    "babel-jest": "^24.7.1",
    "faker": "^4.1.0",
    "jest": "^24.7.1",
    "jsdoc": "^3.5.5",
    "nodemon": "^1.18.7",
    "regenerator-runtime": "^0.12.1",
    "supertest": "^3.1.0"
  }
}
