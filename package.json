{
  "name": "workflyt",
  "version": "1.0.0",
  "main": "src/index.js",
  "description": "App to handle workflows",
  "license": "MIT",
  "scripts": {
    "dev": "./node_modules/.bin/nodemon",
    "stage": "pm2 deploy ecosystem.config.js staging update",
    "prod": "pm2 deploy ecosystem.config.js production update",
    "stage:setup": "pm2 deploy ecosystem.config.js staging setup",
    "prod:setup": "pm2 deploy ecosystem.config.js production setup",
    "create": "mkdir -p logs; mkdir -p logs/all logs/err logs/out; mkdir -p docs; mkdir -p docs/diagrams; mkdir -p docs/test;",
    "remove": "rm -rf node_modules dist logs docs/test package-lock.json yarn.lock",
    "build": "babel src --out-dir dist -D",
    "test": "NODE_ENV=test npm run test:unit && npm run test:integration:both",
    "test:unit": "NODE_ENV=test jest --config test/config/jest.config.unit.js --detectOpenHandles",
    "test:integration": "NODE_ENV=test MOCK=false jest --config test/config/jest.config.integration.js --runInBand --detectOpenHandles",
    "test:integration:mock": "NODE_ENV=test MOCK=true jest --config test/config/jest.config.integration.js --runInBand --detectOpenHandles",
    "test:integration:both": "NODE_ENV=test npm run test:integration:mock -- --coverage; npm run db:migration:test; npm run test:integration -- --coverage;",
    "db:migration:test": "sh src/providers/postgres/scripts/shell/migrate_test.sh",
    "db:migration:dev": "sh src/providers/postgres/scripts/shell/migrate_dev.sh"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/normancarcamo/workflyt.git"
  },
  "contributors": [],
  "author": {
    "name": "Norman Carcamo",
    "email": "normancarcamo@gmail.com"
  },
  "maintainers": [
    "Norman Carcamo <normancarcamo@gmail.com> (normancarcamo.com)"
  ],
  "keywords": [
    "workflyt"
  ],
  "bugs": {
    "url": "https://github.com/normancarcamo/workflyt/issues"
  },
  "homepage": "https://github.com/normancarcamo/workflyt",
  "dependencies": {
    "@babel/preset-env": "^7.1.5",
    "@babel/runtime": "^7.1.5",
    "@ncardez/datalizer": "^1.0.0",
    "babel-jest": "^24.8.0",
    "babel-plugin-inline-dotenv": "^1.3.3",
    "babel-plugin-module-resolver": "^3.1.1",
    "bcrypt": "^3.0.6",
    "compression": "^1.7.3",
    "cookie-parser": "^1.4.3",
    "cors": "^2.8.4",
    "dotenv": "^6.2.0",
    "express": "^4.17.1",
    "fs-extra": "^8.1.0",
    "jsonwebtoken": "^8.5.1",
    "pg": "^7.6.0",
    "pg-hstore": "^2.3.2",
    "pino": "^5.12.6",
    "sequelize": "^5.9.2",
    "sequelize-cli": "^5.5.0",
    "superagent": "^5.1.0",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.5.5",
    "@babel/core": "^7.5.5",
    "@babel/node": "^7.4.5",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0",
    "@babel/plugin-transform-runtime": "^7.1.0",
    "faker": "^4.1.0",
    "jest": "^24.8.0",
    "jest-chain": "^1.0.5",
    "jest-extended": "^0.11.2",
    "jest-html-reporter": "^2.5.0",
    "jsdoc": "^3.6.3",
    "nodemon": "^1.19.1",
    "pino-pretty": "^3.2.0",
    "supertest": "^3.1.0"
  }
}
